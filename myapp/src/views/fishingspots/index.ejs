<h1>釣り場一覧だよ</h1>
<a href=<%= `/fishingSpots/new` %> class='button is-danger'>作成</a>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% fishingSpots.forEach(fishingSpot => { %>
      <tr>
        <td><%= fishingSpot.id %></td>
        <td><%= fishingSpot.name %></td>
        <td>
          <a href=<%= `/fishingSpots/${fishingSpot.id}/edit` %> class='button'>
            編集
          </a>
          <form action=<%= `/fishingSpots/${fishingSpot.id}?_method=DELETE` %> method="post">
            <button type="submit" class="button">削除</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>